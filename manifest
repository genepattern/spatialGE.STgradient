p11_TYPE=String
p11_default_value=min
p11_description=Distance summary metric: \'average\' or \'minimum\'
p11_fileFormat=
p11_flag=-d
p11_name=distance.summary
p11_numValues=1
p11_optional=
p11_prefix=
p11_prefix_when_specified=
p11_type=java.lang.String
p11_value=min\=Minimum;avg\=Average

